{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Lint with Flake8",
            "type": "shell",
            "command": "flake8",
            "group": "build",
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Format with Black",
            "type": "shell",
            "command": "black .",
            "group": "build",
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Install requirements.txt dependencies",
            "type": "shell",
            "command": ".venv/bin/python -m pip install -r requirements.txt",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Setup dev environment (.venv)",
            "type": "shell",
            "command": "scripts/setup",
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Run Home Assistant",
            "type": "shell",
            "command": "scripts/develop",
            "group": "build",
            "isBackground": true,
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        }
    ]
}